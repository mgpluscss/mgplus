{ 
  "type": "module",
  "name": "mgplus",
  "version": "1.2.1",
  "description": "Micro CSS library",
  "homepage": "https://evodim.github.io/mgplus",
  "repository": "https://github.com/Evodim/mgplus",
  "license": "MIT",
  "author": "evodim",
  "targets": {
     "site": {
      "source": "./index.html",
      "distDir": "demo"
    },
    "plugins": {
      "source": "src/plugins/mgplus-dom.js",
      "distDir": "dist/js"
    },
    "library": {
      "source": "src/scss/mgplus.scss",
      "distDir": "dist/css"
    }
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.10.3",
    "parcel": "^2.10.2"
  },
  "scripts": {
    "start": "parcel serve ./index.html --dist-dir demo",
    "watch": "parcel watch",
    "build": "parcel build"
  }
}
